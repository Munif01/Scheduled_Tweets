<h1>Sign In</h1>

<%= form_with url: sign_in_path do |form| %>
<%= form.label :email %>
<div class="mb-3">
    <%= form.text_field :email, class: "form-conrol", placeholder: "Steve@apple.com" %>
</div>
<%= form.label :password %>
<div>
    <%= form.password_field :password, class: "form-conrol", placeholder: "password" %>
</div>

<div class="mb-3">
    <%= link_to "Forgot your password?", password_reset_path %>
</div>

<div class="mb-3">
    <%= form.submit "Sign In", class: "btn btn-primary"%>
</div>

<% end %>