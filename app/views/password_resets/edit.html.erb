<h1>Reset your password</h1>

<%= form_with model: @user, url: password_reset_edit_path(token: params[:token]) do |form| %>


<div class="mb-3">
    <%= form.password_field :password, class: "form-conrol", placeholder: "password" %>
</div>

<%= form.label :password_confirmation %>
<div class="mb-3">
    <%= form.password_field :password_confirmation, class: "form-conrol", placeholder: "password" %>
</div>

<div class="mb-3">
    <%= form.submit "Reset Password", class: "btn btn-primary"%>
</div>

<% end %>